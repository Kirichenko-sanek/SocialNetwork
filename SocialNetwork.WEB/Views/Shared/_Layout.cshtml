@using SocialNetwork.WEB.App_GlobalResources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SocialNetwork</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<header class="mobile">
    <div class="row">
        <div class="col full">
            <div class="logo">
                @Html.ActionLink(Resource.SocialNetwork, "Index", "Home")
            </div>
            <nav id="nav-wrap">

                <a class="mobile-btn" href="#nav-wrap" title="Show navigation">Show navigation</a>
                <a class="mobile-btn" href="#" title="Hide navigation">Hide navigation</a>

                <ul id="nav" class="nav">
                    <li>
                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink(Resource.MyPage, "MyPage", "Profile", new {id = Session["UserId"]}, null)                           
                        }
                        else
                        {
                            @Html.Raw("&emsp;&emsp;&emsp;&emsp;")
                        }
                    </li>
                    <li>
                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink(Resource.Friends, "FriendsPage", "Profile")
                        }
                        else
                        {
                            @Html.Raw("&emsp;&emsp;&emsp;&emsp;")
                            
                        }
                    </li>
                    <li>
                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink(Resource.News, "News", "Profile")
                            
                        }
                        else
                        {
                            @Html.Raw("&emsp;&emsp;&emsp;&emsp;")
                            
                        }
                    </li>
                    <li>
                        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                    </li>
                    <li>
                        @Html.ActionLink("English", "ChangeCulture", "Home", new {lang = "en"}, null)

                    </li>
                    <li>
                        @Html.ActionLink("Русский", "ChangeCulture", "Home", new {lang = "ru"}, null)
                    </li>
                    <li>
                        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                    </li>
                    <li>
                        @(HttpContext.Current.User.Identity.IsAuthenticated ? Html.ActionLink(Resource.LogOff, "LogOff", "Account") : Html.ActionLink(Resource.LogIn, "LogIn", "Account"))

                    </li>
                    <li>
                        @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                        {

                            @Html.ActionLink(Resource.Registration, "Registration", "Account")
                            ;
                        }
                        else
                        {

                            @Html.Raw("&ensp;")
                            ;

                        }
                    </li>
                </ul>

            </nav>
        </div>
    </div>
</header>
@RenderBody()
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@Scripts.Render("~/bundles/jqueryval")

@RenderSection("scripts", required: false)
</body>
</html>
