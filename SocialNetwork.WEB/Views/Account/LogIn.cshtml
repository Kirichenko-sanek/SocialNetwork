@using SocialNetwork.WEB.App_GlobalResources
@model SocialNetwork.WEB.ViewModels.LogInViewModel

@{
    ViewBag.Title = Resource.LogIn;
}
<section id="intro">
    <div id="intro-slider" class="flexslider">
        <li>
            <div class="row">
                <div class="col full">
                    <div class="slider-text">
                        <h2>@Resource.LogIn</h2>
                        <p>
                           @Html.DisplayTextFor(model => model.Error)
                        </p>
                    </div>
                </div>
            </div>
        </li>

    </div>
</section>    

@using (Html.BeginForm("LogIn", "Account", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="contact">
        @Html.ValidationSummary(true, "", new { @id = "text-danger" })
        <div class="row">
            <div class="col g-9">
                <div>
                    <h3>@Html.LabelFor(model => model.EmailLogin, Resource.Email, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
                    @Html.EditorFor(model => model.EmailLogin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailLogin)
                    <hr />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col g-9">
                <div>
                    <h3>@Html.LabelFor(model => model.PasswordLogin, Resource.Password, htmlAttributes: new {@class = "control-label col-md-2"})</h3>
                    @Html.EditorFor(model => model.PasswordLogin, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.PasswordLogin, "", new {@class = "text-danger"}) <hr/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col g-12">
                <div>
                    <input type="submit" value=@Resource.LogIn class="btn btn-default"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col g-9">
                <div>
                    <h3>@Html.ActionLink(Resource.ForgotPassword, "PassRecovery", "Account")</h3>
                </div>
            </div>
        </div>
    </section>
}

