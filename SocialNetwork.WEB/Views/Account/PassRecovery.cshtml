@using SocialNetwork.WEB.App_GlobalResources
@model SocialNetwork.WEB.ViewModels.PassRecoveryViewModel

@{
    ViewBag.Title = Resource.Recovery;
}
<section id="intro">
    <div id="intro-slider" class="flexslider">
        <li>
            <div class="row">
                <div class="col full">
                    <div class="slider-text">
                        <h2>@Resource.Recovery</h2>
                    </div>
                </div>
            </div>
        </li>

    </div>
</section>
@using (Html.BeginForm("PassRecovery", "Account", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="contact">
        @Html.ValidationSummary(true, "", new { @id = "text-danger" })
        <div class="row">
            <div class="col g-9">
                <div>
                    <h3>@Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "control-label col-md-2"})</h3>
                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                    @Html.DisplayTextFor(model => model.Error)
                    <hr/>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col g-12">
                <input type="submit" value=@Resource.Send class="btn btn-default" />
            </div>
        </div>  
    </section>
}
