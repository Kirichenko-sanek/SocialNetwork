@using SocialNetwork.WEB.App_GlobalResources
@model SocialNetwork.WEB.ViewModels.MyPageViewModel
@{
    ViewBag.Title = Resource.MyPage;
    
}


<section id="about">
    <div class="row testimonials">
        <div class="client-author">
            <img src="@Url.Content(Model.Photo)"/>
            <div class="name">
                <h2>@Model.Name</h2>
                <p>
                    @Html.ActionLink(Resource.AddPost, "AddPost", "Profile")
                </p>
                <p>
                    @Html.ActionLink(Resource.EditProfile, "EditProfile", "Profile", new {numUser = Model.Id}, null)
                </p>
                <p>
                    @Html.ActionLink(Resource.EditPassword, "EditPassword", "Profile")
                </p>
            </div>
        </div>
    </div>
</section>
<section id="portfolio">
    <div class="row">
        <div id="portfolio-wrapper">
            @Html.Partial("Posts", Model.Posts)
        </div>
    </div>
</section>